<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.cuatrovientos.larris.examenOneToOne.models">

	<class name="Pilot" table="PILOT">
		<id name="id" column="ID">
			<generator class="foreign">
				<param name="property">aircraft</param>
			</generator>
		</id>
		<property name="name" column="NAME" />
		<property name="license" column="LICENSE" />
		
		<one-to-one name="aircraft" constrained="true" />
			

	</class>

</hibernate-mapping>